<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/personal"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="personal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <TextView
        android:id="@+id/discount"
        android:textColor="#009688"
        android:textSize="16sp"
        android:text="15"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@id/personal"
        app:layout_constraintTop_toTopOf="@id/personal"
        app:layout_constraintStart_toEndOf="@id/personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="16sp"
        android:textColor="#ff22"
        android:text="%"
        android:layout_marginStart="2dp"
        app:layout_constraintBottom_toBottomOf="@id/discount"
        app:layout_constraintTop_toTopOf="@id/discount"
        app:layout_constraintStart_toEndOf="@id/discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="#03A9F4"
        android:id="@+id/time"
        android:text="10: 45 am"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/date"
        android:textSize="14sp"
        android:text="25-6-2000"
        app:layout_constraintTop_toBottomOf="@id/personal"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




</androidx.constraintlayout.widget.ConstraintLayout>