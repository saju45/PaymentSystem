<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imge"
        android:src="@drawable/ic_person"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp"/>


    <TextView
        android:id="@+id/number"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="01773734512"
        android:layout_marginStart="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/amout"
        android:textSize="16sp"
        android:text="10"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@id/number"
        app:layout_constraintStart_toStartOf="@id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <TextView
        android:textColor="#E91E63"
        android:textSize="15sp"
        android:text="Taka"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="@id/amout"
        app:layout_constraintTop_toTopOf="@id/amout"
        app:layout_constraintStart_toEndOf="@id/amout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <View
        android:background="@color/lightGray"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/imge"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:textColor="#2196F3"
            android:id="@+id/time"
            android:text="10:45 am"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>




        <TextView
            android:id="@+id/date"
            android:textSize="16sp"
            android:text="22-3-222"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>